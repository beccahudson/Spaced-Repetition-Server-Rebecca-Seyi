{
  "name": "spaced-repetition-app",
  "version": "0.0.1",
  "description": "A web application to help you learn French using Spaced Repetition",
  "main": "src/server.js",
  "scripts": {
    "test": "mocha --require test/setup.js",
    "dev": "nodemon src/server.js",
    "migrate": "postgrator --config postgrator-config.js",
    "migrate:test": "env NODE_ENV=test npm run migrate",
    "migrate:production": "env SSL=true DATABASE_URL=$(heroku config:get DATABASE_URL) npm run migrate",
    "start": "node src/server.js",
    "predeploy": "npm audit && npm run migrate:production",
    "deploy": "git push heroku master",
    "seed": "psql -U dunder_mifflin -d spaced-repetition -f ./seeds/seed.tables.sql"
  },
  "keywords": [],
  "author": "Rebecca and Seyi",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "dotenv-extended": "^2.8.0",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.5.0",
    "knex": "^0.16.5",
    "morgan": "^1.9.1",
    "pg": "^7.8.2",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "nodemon": "^1.18.9",
    "postgrator-cli": "^3.2.0",
    "supertest": "^3.3.0"
  }
}
